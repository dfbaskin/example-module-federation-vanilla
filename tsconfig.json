{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
